{
    "name": "universal-push-notifications",
    "version": "1.1.0",
    "description": "A secure, universal push notification package for React.js and Vue.js with server-side environment variable protection",
    "main": "dist/client/index.js",
    "module": "dist/client/index.esm.js",
    "types": "types/index.d.ts",
    "exports": {
        ".": {
            "require": "./dist/client/index.js",
            "import": "./dist/client/index.esm.js",
            "types": "./types/index.d.ts"
        },
        "./server": {
            "require": "./dist/server/notificationServer.js",
            "import": "./dist/server/notificationServer.esm.js"
        }
    },
    "scripts": {
        "build": "npm run build:client && npm run build:server",
        "build:client": "rollup -c rollup.config.client.js",
        "build:server": "rollup -c rollup.config.server.js",
        "prepublishOnly": "npm run build"
    },
    "keywords": [
        "push-notifications",
        "react",
        "vue",
        "pwa",
        "service-worker",
        "web-push",
        "notifications"
    ],
    "author": "Your Name",
    "license": "MIT",
    "dependencies": {
        "web-push": "^3.6.7"
    },
    "peerDependencies": {
        "react": ">=16.8.0",
        "vue": ">=2.6.0 || >=3.0.0"
    },
    "peerDependenciesMeta": {
        "react": {
            "optional": true
        },
        "vue": {
            "optional": true
        }
    },
    "devDependencies": {
        "@rollup/plugin-commonjs": "^25.0.8",
        "@rollup/plugin-node-resolve": "^16.0.1",
        "@types/web-push": "^3.6.3",
        "rollup": "^4.46.4"
    },
    "files": [
        "dist/",
        "types/",
        "public/",
        "README.md"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/JRanjan-Biswal/universal-push-notifications.git"
    }
}
